pipeline {
    agent any
    triggers {
        pollSCM '* * * * *'
    }
    environment {
        CI = false
    }
    stages {
        stage('build') {
            steps {
                echo 'buildingg..'
            
        sh '''
         npm install
         npm run build
        '''
            }
        }    
        stage('dockerising') {
            steps {
                echo "building"
                sh 'docker login -u tendomo -p ${DOCKER_PASSWORD}'
                sh 'docker build -t emmycomingd:0.2 .'
                sh 'docker tag emmycomingd:0.2 tendomo/docker1'
                sh 'docker push tendomo/docker1 0.2'
            }
        }
    }
}
